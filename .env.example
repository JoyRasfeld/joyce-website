# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL database connection URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://username:password@localhost:5432/joyce-website"

# =============================================================================
# Email Configuration
# =============================================================================

# Resend API Key for email functionality
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY="your_resend_api_key_here"

# =============================================================================
# Cloudinary Configuration
# =============================================================================

# Cloudinary credentials for image uploads
# Get these from: https://console.cloudinary.com/settings/api-keys
CLOUDINARY_CLOUD_NAME="your_cloud_name_here"
CLOUDINARY_API_KEY="your_api_key_here"
CLOUDINARY_API_SECRET="your_api_secret_here"

# =============================================================================
# Stripe Configuration
# =============================================================================

# Stripe secret key for server-side API calls
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"

# Stripe webhook signing secret
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# =============================================================================
# Site Configuration
# =============================================================================

# Public site URL (used for Stripe redirect URLs)
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable shop functionality
# Set to 'true' to show shop, 'false' to hide it
NEXT_PUBLIC_SHOP_ENABLED="false"

# =============================================================================
# Optional: Development/Production Configuration
# =============================================================================

# Node environment (development, production, test)
# NODE_ENV="development"
